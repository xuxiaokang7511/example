{
  // 代码格式部分的
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  // 启用保存时自动修复,默认只支持.js文件
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    //  用eslint的规则检测js文件
    "javascript",
    {
      // 检测vue文件
      "language": "vue",
      // 为vue文件开启保存自动修复的功能
      "autoFix": true
    },
    {
      "language": "html",
      "autoFix": true
    }
  ],
  "vue-helper.alias": {
    "@": "src"
  }
}
